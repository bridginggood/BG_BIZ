<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/button_pressed_start" />

            <stroke android:width="1dp" android:color="@color/button_stroke" />

            <corners android:radius="3dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <solid android:color="@color/button_pressed_start" />

            <stroke android:width="1dp" android:color="@color/button_stroke" />

            <corners android:radius="3dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="@color/button_unpressed_end" android:startColor="@color/button_unpressed_start" />

            <stroke android:width="1dp" android:color="@color/button_stroke" />

            <corners android:radius="3dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>